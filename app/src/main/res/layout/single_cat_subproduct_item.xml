<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/selector_default_highlight_rect"
            android:tag="binding_1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.percent.PercentFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/ivImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon" />

                </android.support.percent.PercentFrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:tag="binding_5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/discount"
                            android:ellipsize="end"
                            android:fontFamily="fonts/DINNExtLTPro-Bold"
                            android:text="Latest Indian Dresses Collections 2017"
                            android:textColor="@color/grey_4a"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tvprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="fonts/DINEXTLTPro-Medium"
                            android:text="Staring Price : $ 125 "
                            android:textColor="@color/grey_4a"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tvMRP"
                            android:gravity="bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:fontFamily="fonts/DINNexLTLTPro-Medium"
                            android:text="@string/Send_Otp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:background="@color/colorBackground"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_3"
                            android:layout_marginRight="@dimen/dimen_3"
                            android:fontFamily="fonts/DINEXTLTPro-Bold"
                            android:text="Available in free Size"
                            android:textAllCaps="true"
                            android:textColor="@color/grey_4a"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btVproduct"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="0.40"
                        android:background="@color/meesho"
                        android:text="View Details"
                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.10" />

                    <LinearLayout
                        android:id="@+id/btVproshare"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="0.40"
                        android:background="#34af23"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="left"
                            android:layout_marginLeft="@dimen/dimen_5"
                            android:padding="@dimen/dimen_3"
                            android:src="@drawable/whatsappp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:gravity="left"
                            android:text="SHARE"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </FrameLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>