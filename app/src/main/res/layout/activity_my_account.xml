<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.first.choice.Activity.MyAccountActivity">

    <LinearLayout
        android:id="@+id/ll_main"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/grey_8f"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="My ACCOUNT"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layoutName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_account_user_details_bg">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvSymbol"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="5dp"
                                android:layout_marginBottom="@dimen/dimen_10"
                                android:layout_marginLeft="@dimen/dimen_10"
                                android:layout_marginRight="@dimen/dimen_10"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:background="@drawable/text_round2"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/colorPrimary"
                                android:textSize="25sp" />

                            <LinearLayout
                                android:id="@+id/layoutEmailId"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dimen_5"
                                android:layout_marginRight="50dp"
                                android:orientation="vertical"
                                android:weightSum="1.0">

                                <TextView
                                    android:id="@+id/txtMemberName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="30dip"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="_"
                                    android:textColor="@color/white"
                                    android:textSize="18.0sp" />

                                <TextView
                                    android:id="@+id/txtEmailId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:text="_"
                                    android:textColor="@color/white"
                                    android:textSize="16.0sp" />

                                <TextView
                                    android:id="@+id/txtPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:text="_"
                                    android:textColor="@color/white"
                                    android:textSize="14.0sp"
                                    android:visibility="visible" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/editAccountDetails"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_15"
                        android:clickable="true"
                        android:src="@drawable/edit_icon" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_myorder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_account_address_bg"
                        android:minHeight="50.0dip"
                        android:orientation="horizontal"
                        android:paddingBottom="8.0dip"
                        android:paddingTop="8.0dip">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_10"
                            android:src="@drawable/my_orders_icon" />

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_weight="1.0"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="My Orders"
                            android:textColor="@color/grey_4d"
                            android:textSize="@dimen/primary_text_size" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/my_account_user_details_bg"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_account_address_bg"
                        android:minHeight="50.0dip"
                        android:orientation="horizontal"
                        android:paddingBottom="8.0dip"
                        android:paddingTop="8.0dip"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_10"
                            android:src="@drawable/notification" />

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_weight="1.0"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="Notifiction"
                            android:textColor="@color/grey_4d"
                            android:textSize="@dimen/primary_text_size" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/my_account_user_details_bg" />

                    <LinearLayout
                        android:id="@+id/ll_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_account_address_bg"
                        android:minHeight="50.0dip"
                        android:orientation="horizontal"
                        android:paddingBottom="8.0dip"
                        android:paddingTop="8.0dip">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_10"
                            android:src="@drawable/my_location" />

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_weight="1.0"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="Delivery Address"
                            android:textColor="@color/grey_4d"
                            android:textSize="@dimen/primary_text_size" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/my_account_user_details_bg" />

                    <LinearLayout
                        android:id="@+id/ll_invite_friends"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_account_address_bg"
                        android:minHeight="50.0dip"
                        android:orientation="horizontal"
                        android:paddingBottom="8.0dip"
                        android:paddingTop="8.0dip">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_10"
                            android:src="@drawable/share" />

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_weight="1.0"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="Invite Friends"
                            android:textColor="@color/grey_4d"
                            android:textSize="@dimen/primary_text_size" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/my_account_user_details_bg" />

                    <LinearLayout
                        android:id="@+id/ll_Rate_us"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_account_address_bg"
                        android:minHeight="50.0dip"
                        android:orientation="horizontal"
                        android:paddingBottom="8.0dip"
                        android:paddingTop="8.0dip"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_10"
                            android:src="@drawable/review" />

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_weight="1.0"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="Rate Us"
                            android:textColor="@color/grey_4d"
                            android:textSize="@dimen/primary_text_size" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/my_account_user_details_bg"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_Changepwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_account_address_bg"
                        android:minHeight="50.0dip"
                        android:orientation="horizontal"
                        android:paddingBottom="8.0dip"
                        android:paddingTop="8.0dip">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_10"
                            android:src="@drawable/pinchange" />

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_weight="1.0"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="Change Password"
                            android:textColor="@color/grey_4d"
                            android:textSize="@dimen/primary_text_size" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/my_account_user_details_bg" />

                    <LinearLayout
                        android:id="@+id/ll_com_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_account_address_bg"
                        android:minHeight="50.0dip"
                        android:orientation="horizontal"
                        android:paddingBottom="8.0dip"
                        android:paddingTop="8.0dip">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_10"
                            android:src="@drawable/contact" />

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_weight="1.0"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="Customer Service"
                            android:textColor="@color/grey_4d"
                            android:textSize="@dimen/primary_text_size" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/my_account_user_details_bg" />

                    <LinearLayout
                        android:id="@+id/ll_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_account_address_bg"
                        android:minHeight="50.0dip"
                        android:orientation="horizontal"
                        android:paddingBottom="8.0dip"
                        android:paddingTop="8.0dip">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_10"
                            android:src="@drawable/my_logout" />


                        <TextView
                            android:id="@+id/tvLogOut"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_weight="1.0"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="Log Out"
                            android:textColor="@color/grey_4d"
                            android:textSize="@dimen/primary_text_size"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvLogIn"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_weight="1.0"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="Log In"
                            android:textColor="@color/grey_4d"
                            android:textSize="@dimen/primary_text_size"
                            android:visibility="gone" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/my_account_user_details_bg" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>
